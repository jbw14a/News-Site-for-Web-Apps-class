doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(name='description', content='')
		meta(name='author', content='')
		title Clean Blog - Start Bootstrap Theme
		// Bootstrap core CSS
		link(href='vendor/bootstrap/css/bootstrap.min.css', rel='stylesheet')
		// Custom fonts for this template
		link(href='vendor/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
		link(href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic', rel='stylesheet', type='text/css')
		link(href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel='stylesheet', type='text/css')
		// Custom styles for this template
		link(href='stylesheets/clean-blog.min.css', rel='stylesheet')
	body
		// Main Content     Check public/javascripts/indexClient.js for validation and cookie check
		.container
			.row
				.col-lg-8.col-md-10.mx-auto
					p Sign Up
					form#signUpForm(name='signUpForm', method='POST', action='/SignUp')
						.control-group
							.form-group.floating-label-form-group.controls
								label Email Address
								input#up_email.form-control(type='email', placeholder='Email Address', name='up_email', required='', data-validation-required-message='Please enter your email address.')
								p.help-block.text-danger
						.control-group
							.form-group.floating-label-form-group.controls
								label Userame
								input#up_username.form-control(type='text', placeholder='Username', name='up_username', required='', data-validation-required-message='Please enter your name.')
								p.help-block.text-danger
						.control-group
							.form-group.col-xs-12.floating-label-form-group.controls
								label Password
								input#up_password.form-control(type='password', placeholder='Password', name='up_password', required='', data-validation-required-message='Please enter a password.')
								p.help-block.text-danger
						.control-group
							.form-group.col-xs-12.floating-label-form-group.controls
								label Confirm Password
								input#confpassword.form-control(type='password', placeholder='Confirm Password', name='confpassword', required='', data-validation-required-message='Please enter a password.')
								p.help-block.text-danger
						br
						#success
						.form-group
							button#signUpButton.btn.btn-primary(type='submit' onclick="checkPasswordsMatch()") Send
			.row
				.col-lg-8.col-md-10.mx-auto
					p Sign In
					form#signInForm(name='signInForm', method='POST', action='/SignIn')
						.control-group
							.form-group.floating-label-form-group.controls
								label Userame
								input#username.form-control(type='text', placeholder='Username', name='in_username', required='', data-validation-required-message='Please enter your name.')
								p.help-block.text-danger
						.control-group
							.form-group.col-xs-12.floating-label-form-group.controls
								label Password
								input#password.form-control(type='password', placeholder='Password', name='in_password', required='', data-validation-required-message='Please enter a password.')
								p.help-block.text-danger
						br
						#success
						.form-group
							button#signInButton.btn.btn-primary(type='submit') Send
		hr
		// Footer
		footer
			.container
				.row
					.col-lg-8.col-md-10.mx-auto
						ul.list-inline.text-center
							li.list-inline-item
								a(href='#')
									span.fa-stack.fa-lg
										i.fa.fa-circle.fa-stack-2x
										i.fa.fa-twitter.fa-stack-1x.fa-inverse
							li.list-inline-item
								a(href='#')
									span.fa-stack.fa-lg
										i.fa.fa-circle.fa-stack-2x
										i.fa.fa-facebook.fa-stack-1x.fa-inverse
							li.list-inline-item
								a(href='#')
									span.fa-stack.fa-lg
										i.fa.fa-circle.fa-stack-2x
										i.fa.fa-github.fa-stack-1x.fa-inverse
						p.copyright.text-muted Copyright Â© Your Website 2018
